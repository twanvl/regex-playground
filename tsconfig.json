{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build/dist",
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    //"noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    //"noUnusedLocals": true, // this breaks imports in ts-node
    //"noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
